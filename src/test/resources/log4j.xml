<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"	debug="false">

	<appender name="ROLL" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="test.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} %-5p %-15c{1}: %m%n" />
		</layout>
	</appender>

   <appender name="file" class="org.apache.log4j.FileAppender">
       <param name="File" value="/benchmark.log" />
       <param name="immediateFlush" value="false"/>
       <param name="threshold" value="debug"/>
       <layout class="org.apache.log4j.PatternLayout">
          <param name="ConversionPattern" value="%-7p %d [%t] %c %x - %m%n"/>
       </layout>
    </appender>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-5p] [%C{1}]: %m%n" />
		</layout>
	</appender>

	<root>
		<priority value="debug" />
		<appender-ref ref="console" />
	</root>

	<logger name="org.apache.jena">
		<level value="debug" />
		<appender-ref ref="console" />
	</logger>

	<logger name="org.apache.jena.riot.system.stream.JenaIOEnvironment">
		<level value="debug" />
		<appender-ref ref="console" />
	</logger>

	<logger name="fr.ensma.lias.qarscore.connection.SessionTDBTest">
		<level value="debug" />
		<appender-ref ref="ROLL" />
	</logger>

	<logger name="fr.ensma.lias.qarscore.benchmark.BenchmarkStrategiesTest">
		<level value="debug" />
		<appender-ref ref="console" />
	</logger>
	
</log4j:configuration>
